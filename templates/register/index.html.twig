{% extends 'base.html.twig' %}

{% block title %}Register Respuesta.{% endblock %}

{% block body %}
    <div class="container p-5">
        <div class="container d-flex" style="background-color: #D9D9D9; height: 750px;">
            <div class="row w-100 h-80">
                <div class="col-lg-4 bg-dark" style="height: 100%;"></div>
                <div class="col-lg-8 p-3 d-flex flex-column justify-content-between" style="height: 750px;">
                    <div class="mt-3">
                        <h1>Bienvenido a Respuesta.</h1>
                    </div>
                    <div class="mb-3">
                        {{ form_start(form) }}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('registration_form') }}">

                        <div class="form-group">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control rounded-0', 'style': 'background-color: #D9D9D9; border: none; border-bottom: 1px solid #000;'} }) }}
                            {% if form_errors(form.username) %}
                                <span class="validation-message">{{ form_errors(form.username) }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control rounded-0', 'style': 'background-color: #D9D9D9; border: none; border-bottom: 1px solid #000;'} }) }}
                            {% if form_errors(form.email) %}
                                <span class="validation-message">{{ form_errors(form.email) }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.password) }}
                            {{ form_widget(form.password, { 'attr': {'class': 'form-control rounded-0', 'style': 'background-color: #D9D9D9; border: none; border-bottom: 1px solid #000;'} }) }}
                            {% if form_errors(form.password) %}
                                <span class="validation-message">{{ form_errors(form.password) }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.confirmPassword) }}
                            {{ form_widget(form.confirmPassword, { 'attr': {'class': 'form-control rounded-0', 'style': 'background-color: #D9D9D9; border: none; border-bottom: 1px solid #000;'} }) }}
                            {% if form_errors(form.confirmPassword) %}
                                <span class="validation-message">{{ form_errors(form.confirmPassword) }}</span>
                            {% endif %}
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn">Register</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

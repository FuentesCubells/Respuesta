{% extends 'base.html.twig' %}

{% block title %}Login Respuesta.{% endblock %}

{% block body %}
<div class="container p-5">
	<div class="container d-flex" style="background-color: #D9D9D9; height: 750px;">
		<div class="row w-100 h-80">
			<div class="col-lg-4 bg-dark" style="height: 100%;"></div>
			<div class="col-lg-8 p-3 d-flex flex-column justify-content-between" style="height: 750px;">
				<div class="mt-3">
					<h1>Bienvenido a Respuesta.</h1>
				</div>
				<div class="mb-3">
					<form action="{{ path('app_login') }}" method="post">

                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        
                        <div class="form-group ">
                            <label for="username">Username:</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control rounded-0" style="background-color: #D9D9D9; border: none; border-bottom: 1px solid #000;" />
                        </div>
                        
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="_password" class="form-control rounded-0" style="background-color: #D9D9D9; border: none; border-bottom: 1px solid #000;" />
                        </div>
                        
                        <div class="d-flex justify-content-end">
								<button type="submit" class="btn">Login</button>
						</div>
                    </form>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %}
